                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="33 0 0 0">مصرف مازاد:</TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="2" x:Name="TextBlockExtraConsumption" Margin="5 0 0 0" Style="{StaticResource ResourceKey=ImportantText}" VerticalAlignment="Center"></TextBlock>
