            <Button Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" Grid.ColumnSpan="6" x:Name="ButtonCancel" Style="{StaticResource ResourceKey=DefaultButton}" Width="820" Content="ابطال قبض" Click="ButtonSave_Click" KeyDown="ButtonCancel_KeyDown" ToolTip="ابطال قبض [Ctrl+S]" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
