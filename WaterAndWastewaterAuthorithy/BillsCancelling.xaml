                    <TextBlock Grid.Row="2" Grid.Column="7" Margin="22 0 0 0">قرائت فعلی:</TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="8" x:Name="TextBlockCurrentNumberBill" Margin="5 0 0 0" Style="{StaticResource ResourceKey=ImportantText}" VerticalAlignment="Center"></TextBlock>

                    <TextBlock Grid.Row="3" Grid.Column="1" Margin="40 0 0 0" VerticalAlignment="Center">مصرف کل:</TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="2" x:Name="TextBlockAllConsumption" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="3" Margin="11 0 0 0" VerticalAlignment="Center">مبلغ مصرف کل:</TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="4" x:Name="TextBlockPriceOFAllConsumption" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="5" Margin="11 0 0 0" VerticalAlignment="Center">ارزش افزوده:</TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="6" x:Name="TextBlockVat" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
