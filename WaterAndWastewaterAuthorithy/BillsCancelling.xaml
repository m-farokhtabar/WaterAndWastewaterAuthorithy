                    <TextBlock Grid.Row="3" Grid.Column="8" x:Name="TextBlockPriceOFPeriod" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>

                    <TextBlock Grid.Row="4" Grid.Column="1" Margin="19 0 0 0" VerticalAlignment="Center">مانده کسر هزار:</TextBlock>
                    <TextBlock Grid.Row="4" Grid.Column="2" x:Name="TextBlockPrevdeficit1000" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
