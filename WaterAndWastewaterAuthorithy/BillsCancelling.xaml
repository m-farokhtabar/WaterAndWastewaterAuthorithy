                    <TextBlock Grid.Row="4" Grid.Column="6" x:Name="TextBlockDebtBill" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="4" Grid.Column="7" Margin="35 0 0 0" VerticalAlignment="Center">مبلغ کل:</TextBlock>
