                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#FFf5b8b8" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Background>
                        آخرین قبض اشتراک
                    </TextBlock>
