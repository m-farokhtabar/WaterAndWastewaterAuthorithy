                    <TextBlock Grid.Row="5" Grid.Column="4" x:Name="TextBlockWaterMeterSerialBill" Margin="5 0 0 0"></TextBlock>
                    <TextBlock Grid.Row="5" Grid.Column="5" Margin="23 0 0 0">مبلغ آبونمان:</TextBlock>
