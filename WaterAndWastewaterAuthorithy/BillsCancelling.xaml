                    <TextBlock Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" x:Name="TextBlockAccountTypeBill" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="0" Grid.Column="7" Margin="38 0 0 0">کد مانع:</TextBlock>
                    <TextBlock Grid.Row="0" Grid.Column="8" x:Name="TextBlockPreventTypeBill" Margin="5 0 0 0"></TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="33 0 0 0" VerticalAlignment="Center">مصرف مجاز:</TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="2" x:Name="TextBlockAllowableConsumption" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="3" Margin="5 0 0 0" VerticalAlignment="Center">مبلغ مصرف مجاز:</TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="4" x:Name="TextBlockPriceOFConsumption" Style="{StaticResource ResourceKey=ImportantText}" Margin="5 0 0 0" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="5" Margin="-9 0 0 0" VerticalAlignment="Center">تاریخ قرائت قبلی:</TextBlock>
