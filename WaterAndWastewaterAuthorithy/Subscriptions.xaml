                        <Binding.ValidationRules>
                            <ValidateControl:ComboValidate Start="1" Title=" نوع کاربری"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.SelectedIndex>                
            </ComboBox>


            <Image     Grid.Column="2" Grid.Row="3" Source="Images/Windows/Validate/ForceToFill.png" Width="16" Height="16">
